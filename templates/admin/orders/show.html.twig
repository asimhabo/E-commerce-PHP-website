{% extends 'adminbase.html.twig' %}

{% block title %} {% endblock %}

{% block content %}
<!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
        <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Orders List</h4>
                  
                  
                  <div class="table-responsive">
                  {{ include('admin/messages.html.twig') }}
                    <table class="table">
			<thead>
				<tr class="cart_menu">
                    <th>Id</th>
                    <th>Product Name </th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Status</th>
				</tr>
			</thead>
			<tbody>
                {% set total=0 %}
                {% for rs in orderdetail %}
                    <tr>
                        <td>{{rs.id}}</td>
                        <td>{{rs.name}}</td>
                        <td>{{rs.price}}</td>
                        <td>{{rs.quantity}}</td>
                        <td>{{rs.amount}}</td>
                        <td>{{rs.status}}</td>
                     
                    </tr>
                {% endfor %}
			</tbody>
		</table>
        <h3 class="text-primary"> Order Information : </h3>
        <h4>Id :</h4> {{order.id}}
        <hr>
        <h4>User Id :</h4> {{order.userid}}
        <hr>
        <h4>Amount :</h4> {{order.amount}}
        <hr>
        <h4>Name : </h4>{{order.name}}
        <hr>
        <h4>Address :</h4> {{order.address}}
        <hr>
        <h4>City  :</h4> {{order.city}}
        <hr>
        <h4>Phone :</h4> {{order.phone}}
        <hr>
        <form action="{{ path('admin_orders_update',{'id': order.id}) }}" method="post">
        <h4>ShipInfo : </h4>
        <textarea name="shipinfo" cols="100" rows="3"> {{order.shipinfo}}</textarea>
        <hr>
        <h4>Admin Note :</h4>
        <textarea name="note" cols="100" rows="3"> {{order.note}}</textarea>
        <hr>
        <h4>Status :</h4>
        <select name="status">
        <option>{{order.status}}</option>
        <option>Accepted</option>
        <option>In Shipping</option>
        <option>Canceled</option>
        <option>Accepted</option>
        </select>
        <br>
        <br>
        <input class="btn btn-success btn-fw" type="submit" value="Update">
        <hr>
        </form>
    </div>
                </div>
              </div>
        </div>
        
        <!-- content-wrapper ends -->
{% endblock %}