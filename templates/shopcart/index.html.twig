{% extends 'frontbase.html.twig' %}

{% block title %}Shopcart index{% endblock %}
{% block sidebar %}{{ include ('home/usersidebar.html.twig') }}{% endblock %}
{% block content %}
  
<div id="contact-page" class="container">
    <div class="bg">
	<div class="row">    	
    <img src="/images.png" width="500" height="300">
	<div class="col-sm-12"> 
    <h1>Shopcart index</h1>
     {{ include('admin/messages.html.twig') }}

	
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Sale Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shopcart in shopcarts %}
            <tr>
                <td>{{ shopcart.id }}</td>
                <td>{{ shopcart.title }}</td>
                <td>{{ shopcart.sprice }}</td>
                <td>{{ shopcart.quantity }}</td>
                <td>{{ shopcart.quantity * shopcart.sprice }}</td>
                <td>
                    <a href="{{ path('shopcart_del', {'id': shopcart.id}) }}"onclick="return confirm('This user will be deleted !');">Delete</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>   
    </table>
    <a href="{{ path('orders_new') }}" class="btn btn-block btn-warning ">Buy Now </a> 
    
    </div>
    </div>
</div>
</div>
    
{% endblock %}
