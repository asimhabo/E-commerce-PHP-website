<section id="slider"><!--slider-->
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div id="slider-carousel" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
							{% set active="active" %}
							{% set counter=0 %}
							{% for slider in sliders %}
								<li data-target="#slider-carousel" data-slide-to="{{counter}}" class="{{active}}"></li>
								{% set active="" %}
								{% set counter=counter+1 %}
							{% endfor %}
						</ol>
						
						<div class="carousel-inner">
							{% set active="active" %}
							{% for slider in sliders %}
							<div class="item {{active}}">
								<div class="col-sm-6">
									<h2>{{ slider.title }}</h2>
									<p>{{ slider.description }}</p>
							      <a <button href="{{path('product_detail',{'id':slider.id})}}" class="btn btn-default get">Get it now</button></a>
								</div>
								<div class="col-sm-6">
									<img src="/uploads/images/{{slider.image}}" class="girl img-responsive" alt="" />
									
								</div>
							</div>
							{% set active="" %}
							{% endfor %}							
						</div>
						
						<a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
							<i class="fa fa-angle-left"></i>
						</a>
						<a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
							<i class="fa fa-angle-right"></i>
						</a>
					</div>
					
				</div>
			</div>
		</div>
	</section><!--/slider-->