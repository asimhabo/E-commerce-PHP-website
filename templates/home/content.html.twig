<div class="col-sm-9 padding-right">
								<div class="features_items"><!--features_items-->
						<h2 class="title text-center">Featured Items</h2>
						{% for product in products %}
						<div class="col-sm-4">
							<div class="product-image-wrapper">
								<div class="single-products">
										<div class="productinfo text-center">
											<img src="/uploads/images/{{product.image}}" alt="" />
											<h2>${{product.sprice}}</h2>
											<p>{{product.title}}</p>
											<a href="{{path('product_detail',{'id':product.id})}}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
										</div>
										<div class="product-overlay">
											<div class="overlay-content">
												<h2>${{product.sprice}}</h2>
												<p>{{product.title}}</p>
												<a href="{{path('product_detail',{'id':product.id})}}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
											</div>
										</div>
								</div>
								<div class="choose">
									<ul class="nav nav-pills nav-justified">
										<li><a href="{{path('product_detail',{'id':product.id})}}"><i class="fa fa-plus-square"></i>Get It Now</a></li>
									</ul>
								</div>
							</div>
						</div>
						{% endfor %}
					</div><!--features_items-->
	
					
					
				</div>
			</div>
		</div>
	</section>